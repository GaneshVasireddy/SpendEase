<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="16dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/expense_name"
        android:fontFamily="@font/lexend_deca_regular"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:text="Expense Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/category_name"
        android:fontFamily="@font/lexend_deca_regular"
        android:text="Category: Food"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@id/expense_name"
        app:layout_constraintStart_toStartOf="@id/expense_name"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs. 100 /-"
        android:fontFamily="@font/lexend_deca_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/expense_name"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:id="@+id/expense"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: 01-01-2025"
        android:fontFamily="@font/lexend_deca_regular"
        android:textSize="10sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/category_name"
        app:layout_constraintEnd_toEndOf="@id/expense"
        android:id="@+id/expense_date"
        />
</androidx.constraintlayout.widget.ConstraintLayout>